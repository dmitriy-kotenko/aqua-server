@using AquaServer.Core.Utils
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Aqua server</title>

	@Styles.Render("~/Content/bootstrap-css")
	@Styles.Render("~/Content/css")
	@RenderSection("Styles", false)
</head>
<body>
	<nav class="navbar navbar-inverse navbar-fixed-top">
		<div class="container-fluid">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="#">Aqua server</a>
			</div>
			<div id="navbar" class="navbar-collapse collapse">
				<ul class="nav navbar-nav navbar-right">
					<li class="@Html.IsSelected(action: "Index", controller: "Dashboard")">
						@Html.ActionLink("Dashboard", "Index", "Dashboard")
					</li>
					<li class="@Html.IsSelected(action: "TemperatureLog", controller: "Common")">
						@Html.ActionLink("Temperature chart", "TemperatureLog", "Common")
					</li>
					<li class="@Html.IsSelected(action: "DeviceStateLog", controller: "Common")">
						@Html.ActionLink("Device state log", "DeviceStateLog", "Common")
					</li>
					<li><hr /></li>
					<li class="@Html.IsSelected(action: "Index", controller: "Diagnostic")">
						@Html.ActionLink("Diagnostics", "Index", "Diagnostics")
					</li>
				</ul>
			</div>
		</div>
	</nav>

	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-3 col-md-2 sidebar">
				<ul class="nav nav-sidebar">
					<li class="@Html.IsSelected(action: "Index", controller: "Dashboard")">
						@Html.ActionLink("Dashboard", "Index", "Dashboard")
					</li>
					<li class="@Html.IsSelected(action: "TemperatureLog", controller: "Common")">
						@Html.ActionLink("Temperature chart", "TemperatureLog", "Common")
					</li>
					<li class="@Html.IsSelected(action: "DeviceStateLog", controller: "Common")">
						@Html.ActionLink("Device state log", "DeviceStateLog", "Common")
					</li>
					<li><hr /></li>
					<li class="@Html.IsSelected(action: "Index", controller: "Diagnostics")">
						@Html.ActionLink("Diagnostics", "Index", "Diagnostics")
					</li>
				</ul>
			</div>
			<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2">
				<div class="row">
					@RenderBody()
				</div>
			</div>
		</div>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("Scripts", false)
</body>
</html>
